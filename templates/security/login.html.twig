{% extends "base.html.twig" %}

{% block body %}
    <div class = "container">
        <center>
            <div class="col-md-6 col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-md-offset-3 col-xs-6 col-xs-offset-3">
                <h1>Connexion</h1>
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <input placeholder="Pseudo" required name="_username" type="text" class="form-control">
                    </div> 
                    <div class="form-group">
                            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
                <div>
                    <p><a href="{{ path('registration') }}">Creer un compte</a></p>
                </div>
            </div>
        </center>
    </div>
{% endblock %}
    
